<% provide(:title, @user.name) %>
<h3>Welcome<h3>
<div class="row">
  <aside class="span4">
    <section>
      <div>
        <%= gravatar_for @user, size: 40 %>
        <h2><%= @user.name %></h2>
        <p><%= @user.email %></p>
      </div>
      <%= button_to "Create board", new_board_path, method: "get", class: "btn btn-large btn-primary" %>  <%= link_to "Sign out", signout_path, method: "delete", class: "btn btn-large btn-primary" %>
    </section>
  </aside>
</div>
